<view class="container">
  <view class="logo">
    <van-image round fit="cover" width="10rem" height="10rem" src="https://img.yzcdn.cn/vant/cat.jpeg" />
    <view class="name"><text>有意美甲</text></view>
  </view>
  <!-- 账号和密码 -->
  <view class="login">
    <view class="login-input">
      <van-field custom-style="border-radius: 1.5rem;" left-icon="phone-o" size="large" focus placeholder="请输入手机号" />
      <van-field custom-style="border-radius: 1.5rem;" left-icon="award-o" size="large" type="password" focus  placeholder="请输入密码" />
      <van-field custom-style="border-radius: 1.5rem;" left-icon="award-o" size="large" type="password" focus  placeholder="确定密码" />
    </view>
    <van-row class="login-btn">
      <van-col span="8" offset="8" style="text-align: center;">
        <van-button custom-style="width: 6rem;" round type="warning">注册</van-button>
      </van-col>
    </van-row>
    <view class="footer">
      <view style="width: 18rem; margin: auto">
        <van-checkbox icon-class="chebox" value="{{ checked }}" bind:change="onChange" icon-size="1.5rem">
        <text style="font-weight: bold;">已阅读并同意</text><text style="color: red;">《用户协议》</text>
        </van-checkbox>
      </view>
      <text style="color: red;">客服热线：400-1688-166</text>
    </view>
  </view>
</view>