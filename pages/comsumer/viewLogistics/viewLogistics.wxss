.container {

  padding: 10rpx;
  height: 100%;
}
.top-info {
  border-radius: 20rpx 20rpx 0 0;
  border-bottom: solid 1px rgb(239, 238, 238);
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
}
.top-left {
  display: flex;
  align-items: center;
}
.footer {
  background-color: #fff;
  border-radius: 0 0 30rpx 30rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
}
.footer-left {
  width: 50rpx !important;
  height: 40rpx;
  padding: 10rpx;
  background-color: #FFE6D9;
  border-radius: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}
.left-icon {
  color: #fb9f69;
  font-weight: bold;
  font-size: 25rpx;
}
.footer-right {
  font-size: 30rpx;
}