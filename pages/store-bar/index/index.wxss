.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.item {
  display: flex;
  background-color: #FFCCB0;
  border-radius: 50rpx;
  width: 600rpx;
  margin: 30rpx 0;
}
.item .left-font {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-left: 80rpx;
}
.left-font > text:first-child {
  font-size: 50rpx;
  margin: 30rpx 0;
}
.left-font > text:nth-last-child(1) {
  font-size: 35rpx;
}
