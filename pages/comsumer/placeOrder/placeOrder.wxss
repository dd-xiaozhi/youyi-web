.container {
  padding: 15rpx ;
}

/* 地址模块 */
.address {
  margin: 20rpx 0;
}
.name-icon {
  display: flex;
  justify-content: center;
  align-items: center;
  background: #6025F5; 
  background: -webkit-linear-gradient(to right, #FF5555, #6025F5);
  background: linear-gradient(to right, #FF5555, #FF9B6F); 
  border-radius: 100rpx;
  margin-right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  padding: 10rpx;
}

/* 商品内容模块 */
.cell-group-class {
  margin: 0 !important;
}
.product {
  background-color: #fff;
  border-radius: 20rpx;
  margin: 15rpx 0 ;
}
.card-img-class {
  border-radius: 1.5rem;
}
.card-image {
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.p-card {
  display: flex;
  border-radius: 1.5rem;
  padding: 0.5rem;
  padding-bottom: 0.2rem;
  margin-bottom: 20rpx;
}
.info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 20px;
}
.price {
  margin-bottom: 10rpx;
}
.price > view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.price > span {
  margin-left: 10px;
}
.add-btn {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

/* 支付模块 */
.selectPayment {
  margin: 20rpx 0;
  margin-bottom: 250rpx;
}
.payment-icon-class {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 10rpx;
}