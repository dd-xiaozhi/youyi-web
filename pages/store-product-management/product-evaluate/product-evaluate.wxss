.container {
  padding:  0 20rpx;
}

/* 评价模块 */
.top-con {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.user-info {
  display: flex;
  align-items: center;
}
.user-info > text {
  margin: 0 20rpx;
}
.item-content {
  background-color: #fff;
  padding: 10rpx 30rpx 10rpx 30rpx;
  border-radius: 30rpx;
}
.item-content .product-detail {
  font-size: 24rpx;
  color: #979797;
}
.review-content > view {
  margin: 10rpx 0rpx 20rpx 0rpx;
}
.reviews-footer {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 150rpx;
}